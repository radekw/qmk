// parens and brackets
COMB(lprn,     KC_LPRN,         KC_X, KC_C)
COMB(rprn,     KC_RPRN,         KC_COMM, KC_DOT)
COMB(lbrc,     KC_LBRC,         KC_C, KC_V)
COMB(rbrc,     KC_RBRC,         KC_M, KC_COMM)
COMB(lt,       KC_LT,           KC_X, KC_C, KC_V)
COMB(gt,       KC_GT,           KC_M, KC_COMM, KC_DOT)

// tmux prefix
