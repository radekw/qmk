// kludge
COMB(l_sym,    MO(4),           LT(2, KC_BSPC), KC_SPC)

// navigation
COMB(btn1,     KC_BTN1,         KC_W, KC_E)
COMB(btn2,     KC_BTN2,         KC_E, KC_R)
COMB(btn3,     KC_BTN3,         KC_W, KC_R)
COMB(btn4,     KC_BTN4,         KC_2, KC_3)
COMB(btn5,     KC_BTN5,         KC_3, KC_4)
COMB(drgscrl,  DRGSCRL,         KC_2, KC_4)
COMB(esc,      KC_ESC,          KC_J, KC_K)
COMB(esc2,     KC_ESC,          KC_GRV, KC_1)
COMB(ent,      KC_ENT,          KC_K, KC_L)

// symbols
COMB(grv,      KC_GRV,          KC_F, KC_G)
COMB(pmns,     KC_PMNS,         KC_I, KC_O)
