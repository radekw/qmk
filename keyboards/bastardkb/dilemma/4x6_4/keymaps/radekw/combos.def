// layers
COMB(l_nav,    MO(2),      C_Z,    KC_X)
COMB(l_num,    MO(3),      KC_V,   KC_B)
COMB(l_fn,     MO(4),      KC_DOT, C_SLSH)
COMB(L_sym,    MO(5),      KC_N,   KC_M)
COMB(l_sym2,   MO(5),      KC_C,   KC_B)
COMB(l_fn2,    MO(4),      LT(2, KC_BSPC), KC_SPC)

// mouse buttons
#ifdef POINTING_DEVICE_ENABLE
COMB(btn1,     KC_BTN1,    KC_W, KC_E)
COMB(btn2,     KC_BTN2,    KC_E, KC_R)
COMB(btn3,     KC_BTN3,    KC_W, KC_R)
COMB(drgscrl,  DRGSCRL,    KC_W, KC_E, KC_R)
COMB(sniping,  SNIPING,    KC_Q, KC_R)
COMB(btn4,     KC_BTN4,    KC_Q, KC_W)
COMB(btn5,     KC_BTN5,    KC_R, KC_T)
#endif

// keys
COMB(bspc,     KC_BSPC,    KC_S,   KC_D)
COMB(del,      KC_DEL,     KC_D,   KC_F)
COMB(esc1,     KC_ESC,     KC_J,   KC_K)
COMB(esc2,     KC_ESC,     KC_GRV, KC_1)
COMB(ent,      KC_ENT,     KC_K,   KC_L)

// symbols
COMB(mins,     KC_MINS,    KC_I, KC_O)
COMB(unds,   S(KC_MINS),   KC_U, KC_I, KC_O)
COMB(plus,   S(KC_EQL),    KC_U, KC_I)
COMB(eql,      KC_EQL,     KC_U, KC_O)
COMB(pipe,     KC_PIPE,    KC_O, KC_P)
COMB(grv,      KC_GRV,     KC_L, KC_SCLN)
COMB(tilde,    KC_TILD,    KC_Y, KC_U)

// parens and brackets
COMB(lprn,     KC_LPRN,    KC_X,    KC_C)
COMB(rprn,     KC_RPRN,    KC_COMM, KC_DOT)
COMB(lbrc,     KC_LBRC,    KC_C,    KC_V)
COMB(rbrc,     KC_RBRC,    KC_M,    KC_COMM)
COMB(lcbr,     KC_LCBR,    KC_X,    KC_V)
COMB(rcbr,     KC_RCBR,    KC_M,    KC_DOT)
COMB(lt,       KC_LT,      KC_X,    KC_C,    KC_V)
COMB(gt,       KC_GT,      KC_M,    KC_COMM, KC_DOT)

// tmux prefix
COMB(ctrl_u1,  C(KC_U),    KC_U, KC_P)
COMB(ctrl_u2,  C(KC_U),    KC_J, KC_SCLN)

// vim
SUBS(viwa,    ":wa\n",     KC_V, KC_S)
SUBS(vixa,    ":xa\n",     KC_V, KC_A)
SUBS(viqa,    ":qa\n",     KC_V, KC_Q)
